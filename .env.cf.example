# Legacy alias for Cloudflare deploy env vars.
# Preferred workflow:
#   cp .env.local.example .env.local
#   source .env.local

# Required for CI/non-interactive deploy and rollback
export CLOUDFLARE_API_TOKEN="<your-cloudflare-api-token>"
export CLOUDFLARE_ACCOUNT_ID="<your-cloudflare-account-id>"

# Optional deployment metadata overrides
export CF_APP_VERSION="0.0.0"
export CF_BUILD_SHA="$(git rev-parse --short HEAD)"

# Optional local fallback (interactive wrangler session)
# export CF_ALLOW_INTERACTIVE="1"

# Optional default base URL for bun run cf:logs:check
export CF_DEPLOY_BASE_URL="https://converttoit.com"

# Optional log ping protection for /_ops/log-ping
export CF_OPS_LOG_TOKEN="<strong-random-token>"

# Optional build-time FFmpeg/Pandoc overrides (normally not needed)
# export VITE_FFMPEG_CORE_BASE_URL="<remote-ffmpeg-core-base-url>"
# export VITE_PANDOC_WASM_URL="<remote-pandoc-wasm-url>"
